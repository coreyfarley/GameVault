<h1>Add Game-Platform Association</h1>
<form action="/game-platforms/add" method="POST">
  <label for="gameID">Game:</label>
  <select name="gameID" id="gameID">
    {{#each games}}
      <option value="{{this.gameID}}">{{this.title}}</option>
    {{/each}}
  </select>
  <br>
  <label for="platformID">Platform:</label>
  <select name="platformID" id="platformID">
    {{#each platforms}}
      <option value="{{this.platformID}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br>
  <button type="submit">Add Association</button>
</form>

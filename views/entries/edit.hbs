<h1>Edit Entry</h1>

<form action="/entries/edit/{{entry.entryID}}" method="POST">
  <label for="userID">User:</label><br>
  <select id="userID" name="userID" required>
    {{#each users}}
      <option value="{{this.userID}}" {{#if (eq this.userID ../entry.userID)}}selected{{/if}}>{{this.userName}}</option>
    {{/each}}
  </select><br><br>

  <label for="gameID">Game:</label><br>
  <select id="gameID" name="gameID" required>
    {{#each games}}
      <option value="{{this.gameID}}" {{#if (eq this.gameID ../entry.gameID)}}selected{{/if}}>{{this.title}}</option>
    {{/each}}
  </select><br><br>

  <label for="status">Status:</label><br>
  <input type="text" id="status" name="status" value="{{entry.status}}" required><br><br>

  <label for="hoursLogged">Hours logged:</label><br>
  <input type="number" id="hoursLogged" name="hoursLogged" value="{{entry.hoursLogged}}" min="0" max="99999"><br><br>

  <label for="rating">Rating:</label><br>
  <input type="number" id="rating" name="rating" value="{{entry.rating}}" min="1" max="10"><br><br>

  <label for="notes">Notes:</label><br>
  <textarea id="notes" name="notes">{{entry.notes}}</textarea><br><br>

  <label for="hasFavorited">Has favorited:</label><br>
  <input type="number" id="hasFavorited" name="hasFavorited" value="{{entry.hasFavorited}}" min="0" max="1"><br><br>

  <button type="submit">Update Entry</button>
</form>

<p><a href="/entries">Cancel</a></p>

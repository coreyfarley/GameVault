<h1>Edit User</h1>

<form action="/users/edit/{{user.userID}}" method="POST">
  <label for="userName">Username:</label><br>
  <input type="text" id="userName" name="userName" value="{{user.userName}}" required><br><br>

  <label for="email">Email:</label><br>
  <input type="email" id="email" name="email" value="{{user.email}}" required><br><br>

  <label for="joinDate">Join Date:</label><br>
  <input type="date" id="joinDate" name="joinDate" value="{{user.joinDate}}" required><br><br>

  <button type="submit">Update User</button>
</form>

<p><a href="/users">Cancel</a></p>
